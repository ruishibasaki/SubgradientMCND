# ---------------------------------------------------------------------
# Compiler options
# ---------------------------------------------------------------------
CCC = g++
CC  = gcc
CCOPT = -O3
COPT  = -fPIC

# ---------------------------------------------------------------------
# Flags
# ---------------------------------------------------------------------
CFLAGS  = $(COPT)  
CCFLAGS = $(CCOPT) 

# ---------------------------------------------------------------------
# Comands
# ---------------------------------------------------------------------
PRINTLN = echo

# ---------------------------------------------------------------------
# Direction Type
# ---------------------------------------------------------------------
SUBONLY = subgradient_g.cpp
SUMGD = subgradient.cpp
#---------------------------------------------------------
# Files
#---------------------------------------------------------
all:
	$(CCC) -c $(CCFLAGS) main.cpp $(SUBONLY)  mcnd.cpp
	$(CCC) $(CCFLAGS) *.o -o submcnd
	rm -rf *.o *~ ^


